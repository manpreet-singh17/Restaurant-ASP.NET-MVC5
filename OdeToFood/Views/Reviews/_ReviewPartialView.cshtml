@model IEnumerable<OdeToFood.Models.RestaurantReview>

<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Body )
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating )
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewerName )
            </th>
            <th></th>
        </tr>

    @foreach (var review in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => review.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => review.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => review.ReviewerName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id= review.ID })
            </td>
        </tr>
    }

    </table>
